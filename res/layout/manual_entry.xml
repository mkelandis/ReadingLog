<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_height="wrap_content" android:layout_width="fill_parent" android:orientation="vertical">

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/manual_entry_title" android:layout_marginLeft="@dimen/left_indent"/>

	<EditText android:id="@+id/entry_title"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:scrollbars="vertical" android:layout_marginLeft="@dimen/left_indent" android:layout_marginRight="@dimen/left_indent"/>

	<TextView android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:text="@string/manual_entry_author" android:layout_marginLeft="@dimen/left_indent"/>

	<EditText android:id="@+id/entry_author"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:layout_weight="1" android:scrollbars="vertical" android:layout_marginLeft="@dimen/left_indent" android:layout_marginRight="@dimen/left_indent"/>

	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
		android:orientation="horizontal" android:layout_height="wrap_content" android:baselineAligned="true" android:layout_width="fill_parent" android:layout_marginLeft="@dimen/left_indent" android:layout_marginRight="@dimen/left_indent">

		<Button android:id="@+id/save" android:text="@string/manual_entry_save"
			android:layout_width="150px" android:layout_height="wrap_content" />

		<Button android:id="@+id/cancel" android:text="@string/manual_entry_cancel"
			android:layout_width="150px" android:layout_height="wrap_content" />

	</LinearLayout>

</LinearLayout>