<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<RadioGroup android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="vertical">
		<RadioButton android:id="@+id/child"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/context_menu_childread" />
		<RadioButton android:id="@+id/parent"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/context_menu_parentread" />
		<RadioButton android:id="@+id/parentchild"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			android:text="@string/context_menu_parentchildread" />
	</RadioGroup>

</LinearLayout>

