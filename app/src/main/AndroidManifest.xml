<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hintersphere.booklogger"
    android:versionCode="6"
	android:versionName="1.1.3">

	<uses-sdk android:minSdkVersion="8" android:targetSdkVersion="21" />
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

	<application
	    android:icon="@drawable/launcherico"
		android:label="@string/app_name"
		android:allowBackup="true">
        <activity
            android:name=".BookLoggerActivity"
            android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".BookListEditActivity" />
		<activity android:name=".BookListEntryActivity" />
		<activity android:name=".BookListDetailActivity"
		    	  android:windowSoftInputMode="stateHidden|adjustPan" />
		<activity android:name="com.google.ads.AdActivity"
				  android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"/>	
	</application>
</manifest>